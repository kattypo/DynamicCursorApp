{
  "manifest_version": 3,
  "name": "Dynamic Cursor",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "main.html",
    "default_icon": "Assets/hello_extensions.png"
  },
  "permissions": [ "tabs", "activeTab" ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": [ "updateCursor.css" ],
      "js": ["updateCursor.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "Assets/default_cursor.png"],
      "matches": [ "<all_urls>" ]
    }
  ]
}