{
  "manifest_version": 3,
  "name": "Dynamic Cursor",
  "description": "A Chrome extension that allows a user to change their cursor based on the website they are on",
  "version": "1.0",
  "action": {
    "default_popup": "main.html",
    "default_icon": "Assets/icon_16.png"
  },
  "permissions": [ "tabs", "activeTab", "storage", "webNavigation" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": [ "updateCursor.css" ],
      "js": [ "updateCursor.js" ]
    }
  ],
  "icons": {
    "16": "Assets/icon_16.png",
    "48": "Assets/icon_48.png",
    "128": "Assets/icon_128.png"
  }
}